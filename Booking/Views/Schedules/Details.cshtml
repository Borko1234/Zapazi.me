@model Booking.Data.Entities.Schedule

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Schedule</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Open)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Open)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Close)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Close)
        </dd>
    </dl>
</div>

<div class="d-flex justify-content-start gap-3 mt-4">
    <!-- Edit Button -->
    <a href="@Url.Action("Edit", "Schedules", new { id = Model?.Id })" class="btn btn-success btn-md" style="width: 150px; height: 50px; display: flex; flex-direction: column; justify-content: center; align-items: center; border-radius: 10px;">
        <span>Edit</span>
    </a>

    <!-- Back to List Button -->
    <a href="@Url.Action("Index", "Schedules")" class="btn btn-secondary btn-md" style="width: 150px; height: 50px; display: flex; flex-direction: column; justify-content: center; align-items: center; border-radius: 10px;">
        <span>Back to List</span>
    </a>

    <!-- Delete Button -->
    <form asp-action="Delete" asp-route-id="@Model?.Id" method="post" style="display: inline;">
        <button type="submit" class="btn btn-danger btn-md" style="width: 150px; height: 50px; display: flex; flex-direction: column; justify-content: center; align-items: center; border-radius: 10px;">
            <span>Delete</span>
        </button>
    </form>
</div>
