@model IEnumerable<Booking.Data.Entities.Pricing>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="d-flex justify-content-start align-items-center mt-4 gap-3">
    <!-- Create Button -->
    <a href="@Url.Action("Create", "Pricings")" class="btn btn-primary d-flex justify-content-center align-items-center" style="height: 38px; padding: 0 20px; border-radius: 5px;">
        <span>Create</span>
    </a>

    <!-- Search Bar -->
    <form asp-action="Index" method="get" class="d-flex">
        <input type="text" name="searchTerm" class="form-control" placeholder="Enter Facility or Price..." style="width: 300px;" />
        <button type="submit" class="btn btn-secondary ms-2">Search</button>
    </form>
</div>

<table class="table mt-4">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Facility.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerHour)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <!-- Make Facility Name Clickable -->
                <a href="@Url.Action("Details", "Facilities", new { id = item.Facility.Id })" class="link-style">
                    @Html.DisplayFor(modelItem => item.Facility.Name)
                </a>
            </td>
            <td>
                <!-- Make Price Clickable and Add BGN -->
                <a href="@Url.Action("Details", "Pricings", new { id = item.Id })" class="link-style">
                    @Html.DisplayFor(modelItem => item.PricePerHour) BGN
                </a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Styles {
    <style>
        .link-style {
            color: black;
            text-decoration: none;
        }

        .link-style:hover {
            color: blue;
            text-decoration: underline;
        }
    </style>
}
